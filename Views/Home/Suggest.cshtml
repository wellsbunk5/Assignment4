@{
    ViewBag.title = "Suggest a Resturant";
}
@model Assignment4.Models.Suggestion


<!-- form for the suggestion model-->
<br />
<br />
<br />
<form class="form-horizontal text-center" method="post" asp-action="Suggest">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="RestName">Resturant Name:</label>
        <input asp-for="RestName" />
    </div>
    <div class="form-group">
        <label asp-for="FavDish">Favorite Dish:</label>
        <input asp-for="FavDish" />
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone:</label>
        <input asp-for="Phone" />
    </div>
    <br />
    <br />
    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn-dark">Submit Suggestion</button>
</form>