@{
    ViewBag.title = "List of Suggestions Received";
}
@model IEnumerable<Assignment4.Models.Suggestion>



<!-- Make a table of for the suggestions and dynamcially display that-->
<div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Resturant Name</th>
                <th>Favorite Dish</th>
                <th>Phone</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Assignment4.Models.Suggestion x in Model)
            {
                <tr>
                    <td>@x.Name</td>
                    <td>@x.RestName</td>
                    <td>@x.FavDish</td>
                    <td>@x.Phone</td>
                </tr>
            }
        </tbody>
    </table>
</div>
